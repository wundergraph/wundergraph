{
  "extends": "../../tsconfig.base.json",
  "types": ["jest", "@testing-library/jest-dom", "@wundergraph/sdk/client"],
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "node",
    "declarationDir": "./dist",
    "jsx": "preserve",
    "jsxImportSource": "solid-js",
    "outDir": "./dist",
    "incremental": false,
    "baseUrl": ".",
    "paths": {
      "@wundergraph/sdk/*": ["../../packages/sdk/src/*"]
    }
  },
  "include": ["src/**/*", "tests"],
  "exclude": ["node_modules", "dist"]
}
