---
import type { CountriesListQuery } from "../__relay__generated__/CountriesListQuery.graphql";
import CountryName from "../components/CountryName/CountryName.astro";
import { fetchWunderGraphSSRQuery } from "../lib/wundergraph";
import { CountriesList } from "../queries/CountriesList";
const { queryResponse: countriesListData } = await fetchWunderGraphSSRQuery<CountriesListQuery>(CountriesList)
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>Astro</title>
	</head>
	<body>
		<h1>Countries list generated at build time using Relay</h1>
		<ul>
			{
				countriesListData && countriesListData.countries_countries.map(each => {
					return <CountryName countryNameReference={each} />
				})
			}
		</ul>
		<button>Back</button>
	</body>
</html>
